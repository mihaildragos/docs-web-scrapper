{
  "base_url": "https://docs.example.com",
  "output_directory": "docs",
  "scraping": {
    "max_depth": 3,
    "delay_seconds": 1.0,
    "max_pages": 100,
    "headless": true,
    "debug": false
  },
  "selectors": {
    "main_content": ["main", "article", ".content", ".documentation"],
    "page_title": ["h1", ".page-title", "article h1"],
    "navigation": ["nav", ".sidebar", ".toc", ".navigation"],
    "code_blocks": ["pre", "code", ".highlight"],
    "tables": ["table", ".table"],
    "figures": ["figure", "img", ".figure"],
    "notes": [".note", ".warning", ".admonition", ".alert"]
  },
  "llm": {
    "endpoint": "http://deepseek:8000",
    "model": "deepseek-ai/deepseek-llm-1.3b-base",
    "temperature": 0.3,
    "max_tokens": 1024
  },
  "excluded_patterns": [
    "/login",
    "/register",
    "/search",
    "/download",
    "/contact"
  ],
  "cloudflare_session": {
    "enabled": false,
    "session_file": "session_data/cloudflare_session.json"
  }
}
